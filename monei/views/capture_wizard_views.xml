<odoo>
    <record id="view_monei_payment_capture_wizard_form" model="ir.ui.view">
        <field name="name">monei.payment.capture.wizard.form</field>
        <field name="model">monei.payment.capture.wizard</field>
        <field name="arch" type="xml">
            <form string="Capture Payment">
                <group>
                    <field name="payment_id" invisible="1"/>
                    <field name="amount" placeholder="Leave empty to capture full amount"/>
                </group>
                <footer>
                    <button string="Capture Payment" type="object" name="action_capture" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 